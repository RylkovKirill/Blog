@model IQueryable<Report>
@inject IPostService postService
@inject IReportCategoryService reportCategoryService
@{
    ViewData["Title"] = "Категории";
}
<h1>@ViewData["Title"]</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">Жалобы</th>
            <th scope="col">Посты</th>
            <th scope="col">Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
            <td>@reportCategoryService.GetCategory(item.ReportCategoryId).Name</td>
            <td>@postService.GetPost(item.PostId).Title</td>
                <td>
                    <a type="button" class="btn btn-primary" asp-controller="Categories" asp-action="Edit" asp-route-id="@item.Id">Изменить пост</a>
                    <a type="button" class="btn btn-danger" asp-controller="Users" asp-action="Delete" asp-route-id="@item.Id">Удалить пост</a>
                    <a type="button" class="btn btn-danger" asp-controller="Reports" asp-action="Delete" asp-route-id="@item.Id">Удалить жалобу</a>
                </td>
            </tr>
        }
    </tbody>
</table>
