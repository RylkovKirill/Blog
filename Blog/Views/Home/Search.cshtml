@addTagHelper *, Blog
@foreach (Post post in Model.Posts)
{
    var path = "";
    @if (post.TitleImagePath != null)
    {
        path = post.TitleImagePath;
    }
    else
    {
        path = "1.jpg";
    }
    <div class="card mb-3">
        <img class="card-img-top" src="~/images/@path" alt="Card image cap">
        <div class="card-body">
            @if (post.Title.Length > 100)
            {
                <h5 class="card-title">@post.Title.Substring(0, 100) + " ..."</h5>
            }
            else
            {
                <h5 class="card-title">@post.Title</h5>
            }
            @*<p class="card-text">@Html.Raw(post.Content)</p>*@
            <p class="card-text"><small class="text-muted">@Html.Raw(post.PostedDate)</small></p>
            <a asp-area="" asp-controller="Blog" asp-action="Details" asp-route-id="@post.Id" class="btn btn-primary">Читать полностью</a>
        </div>
    </div>
}
<div>
    <page-link  page-model="Model.PageViewModel" page-action="Index" name="@ViewBag.Name"></page-link>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>